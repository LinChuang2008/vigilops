# VigilOps 配置示例
# 复制为 .env 并按需修改

# ---------- 数据库 ----------
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=vigilops
POSTGRES_USER=vigilops
POSTGRES_PASSWORD=change-me

# ---------- Redis ----------
REDIS_HOST=localhost
REDIS_PORT=6379

# ---------- AI ----------
AI_PROVIDER=deepseek
AI_API_KEY=
AI_API_BASE=https://api.deepseek.com/v1
AI_MODEL=deepseek-chat
AI_MAX_TOKENS=2000
AI_AUTO_SCAN=false

# ---------- 记忆系统 ----------
MEMORY_API_URL=http://host.docker.internal:8002/api/v1/memory
MEMORY_ENABLED=true

# ---------- Agent 自动修复 ----------
AGENT_ENABLED=false                  # 是否启用自动修复 Agent
# ⚠️ 上线后建议先以 dry_run=true 观察一周，确认无误再设为 false
AGENT_DRY_RUN=true                   # dry-run 模式：只记录不执行
AGENT_MAX_AUTO_PER_HOUR=10           # 每小时最大自动修复次数
AGENT_NOTIFY_ON_SUCCESS=true         # 修复成功时发送通知
AGENT_NOTIFY_ON_FAILURE=true         # 修复失败/升级时发送通知

# ---------- JWT ----------
JWT_SECRET_KEY=change-me-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=120
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7
